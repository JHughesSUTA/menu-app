<% if current_user %>
  <p>Hello, <%= current_user.name %></p>
<% end %>

<div class="row">

  <!-- CATEGORIES SECTION -->
    <div class="col s12">
      <h1 >CURRENT CATEGORIES</h1>
    </div>
    <div class=" col 12">
      <div class="col s6">
        <% @categories.each do |category| %>
          <div class="col s8">
            <h5><%= category.name %></h5>
          </div>
          <div class="col s4">
            <%= form_tag "/categories/#{category.id}",
            data: { confirm: "WARNING:\nThis will also remove any items under this category!\nOkay to proceed?" },
            method: :delete do %>
              <button class="btn-floating" type="submit" value="delete"><i class="material-icons">delete</i></button>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="col s6 category-box">
        <%= form_tag "/categories", method: :post do %>
          <div class="col s8">
            Add a New Category: <input type="text" name="category_name">
          </div>
          <div class="col s4 add-btn">
            <button class="btn" type="submit">Add</button>
          </div>
        <% end %>
      </div>
    </div>

  <div class="divider col s12"></div>

  <!-- ITEMS SECTION -->
  <div class="col s12">
    <h1>CURRENT ITEMS</h1>
    <div class="col s12" id="add-item-button">
      <a href="/items/new" class="waves-effect waves-light btn col s4 push-s4">Add New Item</a>
    </div>

    <% @categories.each do |category| %>
      <h2 class="col s12" id="menu-category"><%= category.name.pluralize %></h2>
      <% @items.each do |item| %>
        <% if item.category.id == category.id %>
          <div class="col s6">
            <div class="card grey darken-3 z-depth-5">
              <div class="card-content white-text">
                <span class="card-title"><%= item.name %></span>
                <% if item.lunch && item.dinner %>
                  <p id="card-menu">Lunch and Dinner Menus</p>
                <% elsif item.lunch %>
                  <p id="card-menu">Lunch Menu</p>
                <% elsif item.dinner %> 
                  <p id="card-menu">Dinner Menu</p>
                <% end %>
                <p id="card-description"><%= item.description %></p>
                <p id="card-price"><%= number_to_currency(item.price) %></p>
              </div>
              <div class="card-action col s12">
                <a href="/items/<%= item.id %>/edit" class="normal-link btn-floating" class="col s2">
                  <i class="material-icons">edit</i>
                </a>
                <div class="col s2">
                  <%= form_tag "/items/#{item.id}", method: :delete do %>
                    <button class="btn-floating" type="submit" value="delete">
                      <i class="material-icons">delete</i>
                    </button>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>


  </div>

</div>